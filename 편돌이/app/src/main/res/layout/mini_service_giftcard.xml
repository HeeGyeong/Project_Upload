<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상품권 &amp; 복권 판매"
                android:textColor="#ff9b00"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="12dp"
                android:src="#ff9b00"/>

            <ImageView
                android:layout_width="380dp"
                android:layout_height="100dp"
                android:src="@drawable/mini_gift1"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● 문화상품권"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 권종 : 5,000원권 / 10,000원권 "
                android:layout_marginLeft="60dp"
                android:textSize="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 도서, 음반, 영화 외에 놀이공원, 스포츠경기 관람 가능(오프라인) "
                android:layout_marginLeft="60dp"
                android:textSize="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 컬쳐랜드(인터넷쇼핑몰), 도서, 음반, 패션, 가전, 스포츠용품, 생활용품 등 공연 및 문화정보 등 부가서비스 기능 제공(온라인) "
                android:layout_marginLeft="60dp"
                android:textSize="10dp"/>

            <ImageView
                android:layout_width="380dp"
                android:layout_height="100dp"
                android:src="@drawable/mini_gift2"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● 해피머니상품권"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 권종 : 5,000원권 / 10,000원권"
                android:layout_marginLeft="60dp"
                android:textSize="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 온/오프라인 겸용 상품권. 다양한 외식, 문화 공간에서 활용가능"
                android:layout_marginLeft="60dp"
                android:textSize="10dp"/>

            <ImageView
                android:layout_width="380dp"
                android:layout_height="70dp"
                android:src="@drawable/mini_gift3"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● 복권"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 권종 : 스피또500, 스피또1000, 스피또2000, 연금복권520"
                android:layout_marginLeft="60dp"
                android:textSize="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 당첨가액이 5만원 이하인 당첨복권은 판매점에서 복권이나 현금으로 교환이 가능합니다."
                android:layout_marginLeft="60dp"
                android:textSize="10dp"/>


            <!-- padding 추가 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="#3cb371"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="12dp"
                android:src="#00000000"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
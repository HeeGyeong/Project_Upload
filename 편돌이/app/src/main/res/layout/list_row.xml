<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:id="@+id/pro_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@id/pro_img"
            android:text="New Text"
            android:id="@+id/pro_text"
            android:textSize="16dp"
            android:textColor="#000000"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/pro_img"
            android:text="New Text"
            android:id="@+id/pro_event"
            android:textSize="14dp"
            android:textColor="#ff6347"
            android:gravity="center_vertical"
            android:layout_below="@id/pro_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/pro_event"
            android:text=")    "
            android:id="@+id/pro_inverval"
            android:textColor="#ff6347"
            android:textSize="14dp"
            android:gravity="center_vertical"
            android:layout_below="@id/pro_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/pro_inverval"
            android:text="New Text"
            android:id="@+id/pro_price"
            android:textSize="14dp"
            android:textColor="#ef00cf"
            android:layout_below="@id/pro_text"/>

        <Button
            android:id="@+id/product_detail"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_keyboard_arrow_right_24dp"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
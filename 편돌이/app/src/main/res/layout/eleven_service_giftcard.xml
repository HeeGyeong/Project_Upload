<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="교통카드 충전/판매"
                android:layout_marginTop="10dp"
                android:textColor="#3cb371"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="12dp"
                android:src="#2e8b57"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="캐시비, 마이비 T머니 카드 충전 및 판매 서비스를 제공합니다."
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="각 카드별로 서비스 지역이 다르니 확인후 구매를 권장합니다."
                android:layout_marginLeft="15dp"
                android:textSize="10dp"
                android:textColor="#fa8072"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화카드 판매"
                android:layout_marginTop="10dp"
                android:textColor="#3cb371"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="12dp"
                android:src="#2e8b57"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공중전화 카드, 선불 국제전화카드를 판매합니다."
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● 공중전화 카드"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 공중전화기 어디서나 사용할 수 있는 공중전화 카드"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="6dp"
                android:textSize="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● 선불국제전화 카드"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 전 세계 어느 곳이나 저렴한 가격으로 통화 할 수 있는 선불형 카드"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="6dp"
                android:textSize="10dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="피프틴카드 판매"
                android:layout_marginTop="10dp"
                android:textColor="#3cb371"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="12dp"
                android:src="#2e8b57"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공공임대 자전거 사업 'FIFTEEN' 이용카드를 판매합니다."
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● 피프틴 카드란?"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 고양시에 위치한 세븐일레븐, 바이더웨이 점포에서 구매가 가능하며,
125개 ‘FIFTEENP ARK’에서 간단한 인증절차를 통해 자전거 렌트가 가능
한 카드입니다."
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="6dp"
                android:textSize="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상품권 판매"
                android:layout_marginTop="10dp"
                android:textColor="#3cb371"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="12dp"
                android:src="#2e8b57"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="도서문화, 해피머니, 문화상품권, 구두상품권, 롯데백화점 상품권 등 다양한 상품권을 판매합니다."
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● 도서문화, 해피머니, 문화상품권"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 도서음반, 영화티켓, 외식, 인터넷에서 사용 가능한 소액 결제 상품권"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="6dp"
                android:textSize="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● 금강제화 상품권"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 전국 400개 금강제화 제휴 및 직영매장에서 사용 가능한 상품권"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="6dp"
                android:textSize="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● 롯데백화점 상품권"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 전국 롯데백화점에서 사용 가능한 프리미엄 상품권"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="6dp"
                android:textSize="10dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="복권 판매"
                android:layout_marginTop="10dp"
                android:textColor="#3cb371"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="12dp"
                android:src="#2e8b57"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인쇄복권, 온라인 복권을 판매합니다."
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● 인쇄복권 (스피또, 팝콘 복권)"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 즉석에서 바로 행운을 확인 할 수 있는 복권을 판매 중입니다."
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="6dp"
                android:textSize="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● 온라인복권 (스포츠토토, 로또복권)"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 복권 발매기 설치 운영 점포에서만 가능"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="6dp"
                android:textSize="10dp"/>

            <!-- padding 추가 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="#3cb371"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="12dp"
                android:src="#00000000"/>
            </LinearLayout>
    </ScrollView>
</LinearLayout>
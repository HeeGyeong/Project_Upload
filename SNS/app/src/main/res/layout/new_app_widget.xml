<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50000000"
    android:padding="@dimen/widget_margin"
    >

    <TextView
        android:id="@+id/approching"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="임박"
        android:layout_weight="1"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/approching"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        />

    <TextView
        android:id="@+id/expiration"
        android:layout_toRightOf="@+id/approching"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="만료"
        android:layout_weight="1"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        />

    <TextView
        android:id="@+id/approchingCount"
        android:layout_below="@+id/approching"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="N개"
        android:letterSpacing="0.5"
        android:layout_weight="1"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/approchingCount"
        android:background="#ffffff"
        />

    <TextView
        android:id="@+id/expirationCount"
        android:layout_alignTop="@+id/approchingCount"
        android:layout_toRightOf="@+id/approching"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="n개"
        android:letterSpacing="0.5"
        android:layout_weight="1"
        android:textColor="#ffffff"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/appwidget_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginTop="50dp"
        android:background="#00000000"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        />

</RelativeLayout>